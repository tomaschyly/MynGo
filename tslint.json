{
	"env": {
        "browser": true,
        "es6": true,
        "node": true
    },
	"extends": ["tslint-react"],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts",
			"coverage/lcov-report/*.js"
		]
	},
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
	"rules": {
        "indent": [
            "error",
			"tab",
			{"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
		]
    }
}