<!DOCTYPE html>
<html class="{{{Globals.os}}} {{#if userLoggedIn}}logged-in{{else}}logged-out{{/if}}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<title>{{title}} - MynGo</title>

		<link rel='stylesheet' href='/stylesheets/style.css'>
		<link rel="preload" href="/stylesheets/transition.css" as="style" id="css-transition">
		<script>
			setTimeout (() => {
				document.getElementById ('css-transition').rel = 'stylesheet';
			}, 1);
		</script>
	</head>

	<body>
		{{> titlebar}}

		<div id="wrapper">
			{{> header}}

			<section id="content">
				<div class="container">
					<div class="row">
						<div class="col-10">
							<div class="panel thin title" id="title-nav-title">
								<h1>{{title}}</h1>
							</div>

							<div class="panel no-white title-nav-panel empty" id="title-nav"></div>
						</div>
					</div>
				</div>

				{{{RenderFlashes}}}

				{{{body}}}
			</section>
		</div>

		{{> popups}}

		<script src="/javascripts/greensock/TweenMax.min.js"></script>
		{{DatabaseWhereConditionsJson}}
		<script src="/javascripts/main.js"></script>
		<script src="/javascripts/grid.js"></script>
		<script src="/javascripts/select.js"></script>
		<script src="/javascripts/checkbox.js"></script>
		{{{scripts}}}
	</body>
</html>
